<%= simple_form_for @event do |f| %>
  <%= f.input :name, label:'Name :' %>
  <%= f.input :date, label:'Date :', as: :date, start_year: Date.today.year,
                                                end_year: Date.today.year + 15,
                                                order: [:month,:year,:day]%>
                                                
  <%= f.input :time, label:'Time :', as: :time %>
  <%= f.input :description, label:'Description :' %>
  <%= f.input :location %>
  <%= f.button :submit %>
<% end %>

